<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="../../public/css/style.css" />
  </head>

  <body class="bg-sky-900 container">
    <header class="text-3xl p-3 bg-slate-800 w-screen">

      <nav class="border-b-4 border-stone-900 m-2 p-6">
        {{#if logged_in}}
          <a
            class="border border-white bg-zinc-800 text-white p-2 m-2"
            href="/"
          >Home</a>
          |
          <a
            class="border border-white bg-zinc-800 text-white p-2 m-2"
            href="/profile"
          >Dashboard</a>
          |
          <button
            class="no-button border border-white bg-zinc-800 text-white p-2 m-2"
            id="logout"
          >Logout</button>
        {{else}}
          <a
            class="border border-white bg-zinc-800 text-white p-2 m-2"
            href="/"
          >Home</a>
          |
          <a
            class="border border-white bg-zinc-800 text-white p-2 m-2"
            href="/login"
          >Login</a>
        {{/if}}
      </nav>
    <div class="text-5xl m-7 border-b-4 border-stone-900">
      <h1 class="m-2 p-2 boder-8 border-stone-700 outline-double bg-zinc-700 text-white w-1/4 text-center shadow-inner shadow-zinc-800">
        <a href="/">Thee Blog Spot</a>
      </h1>
    </div>
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer>

    </footer>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>