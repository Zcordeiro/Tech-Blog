<div class="text-center border-4 border-zinc-900 mx-auto w-2/3 bg-zinc-800">
  <div class="text-white">
    <h2 class="text-5xl">{{blog_title}}</h2>
    <p class="text-xl italic text-gray-400">Created by
      {{user.name}}
      on
      {{format_date date_added}}</p>
  </div>
  <p class="m-5 border-4 border-zinc-600 bg-yellow-100 text-4xl">
    {{blog_content}}
  </p>
</div>


{{#each comments as |comment|}}
<div class="m-5 text-white">

  Comment left on: {{format_date comment.date_added}}
  <br>
  <div class="text-gray-200"> By: {{comment.user.name}} </div>
  <div class="w-1/3 bg-white text-black">
  {{comment.comment_data}} 
  </div>

</div>
{{/each}}
