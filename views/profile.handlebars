<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 border-2 border-black">
    <h3 class="text-xl">Create a New Blog Post:</h3>

    <form class="form new-blog-form M-3">
      <div class="form-group">
        <label for="blog-blog_title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-blog_title" name="blog-blog_title" />
      </div>

      <div class="form-group M-3">
        <label for="blog-blog_content">Content:</label>
        <textarea class="form-input" id="blog-blog_content" name="blog-blog_content"></textarea>
      </div>

      <div class="form-group relative inline-flex items-center justify-center px-6 py-2 text-base font-normal text-white bg-black border border-transparent rounded-full">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogPosts.length}}
  <div class="col-md-6 blog-list">
    <h3>Recent Blog Posts:</h3>

    {{#each blogPosts as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.blog_title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>